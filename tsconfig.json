{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "removeComments": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "pretty": true,
  "declaration": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types"]
}
